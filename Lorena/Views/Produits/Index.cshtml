@model Lorena.Models.Entity.ViewModel.ProduitsViewModel

@{
    ViewBag.Title = "Produits";
}

@{
    var libSoin = (string)ViewData["Soin"];
    if (!String.IsNullOrEmpty(libSoin))
    {
        <h4>Produits de beauté utilisés pour le soin <strong>@libSoin</strong></h4>
    }
    else
    {
        <h4>Produits de beauté</h4>
    }
}

<div class="row">
    @if(Model.Produits.Count == 0)
    {
        <p>Aucun produit n'a été enregistré
    @if(!String.IsNullOrEmpty(libSoin))
    {
        <span> pour ce soin</span>
    }
    </p>
    }

    @for (int i = 0; i < Model.Produits.Count; i++)
    {
        <div class="col-md-4">
            @Html.Partial("Produit", Model.Produits[i])
        </div>
    }
</div>
