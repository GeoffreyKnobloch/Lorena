@model Lorena.Models.Entity.ViewModel.SoinsViewModel

@{
    ViewBag.Title = "Les soins à la carte";
}

<h2>Choisissez les soins qui vous font envie !</h2>

@using (Html.BeginForm("Index", "RendezVous"))
{
    <div class="row">
    @for (int i = 0; i < Model.Soins.Count; i++)
    {
        <div class="col-md-4">
    <!--Faire apparaître la vue partiel du soin-->

            @Html.EditorFor(m => m.Soins[i])

        </div>
    }
    </div>

<div class="form-group" style="height:50px;text-align:center;">
    
        <input type="submit" value="Prendre rendez-vous" class="btn btn-default" style="border:3px solid green" />
  
</div>
}